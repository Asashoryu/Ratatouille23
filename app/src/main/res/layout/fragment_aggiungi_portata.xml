<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.AggiungiPortataFragment" >

    <data>
        <variable
            name="aggiungiPortataViewModel"
            type="com.rat.ratatouille23.viewmodel.AggiungiPortataViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_dark" >

        <TextView
            android:id="@+id/txt_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nome"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_costo"
            app:layout_constraintEnd_toStartOf="@+id/nome_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/et_custom"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/costo_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_nome"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_costo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="costo"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_categoria"
            app:layout_constraintEnd_toStartOf="@+id/costo_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_nome" />

        <EditText
            android:id="@+id/costo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/et_custom"
            android:ems="10"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toTopOf="@+id/categoria_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_costo"
            app:layout_constraintTop_toBottomOf="@id/nome_text" />

        <TextView
            android:id="@+id/txt_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="categoria"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_lista_allergeni"
            app:layout_constraintEnd_toStartOf="@+id/categoria_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_costo" />

        <EditText
            android:id="@+id/categoria_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/et_custom"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/lista_allergeni_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_categoria"
            app:layout_constraintTop_toBottomOf="@id/costo_text" />

        <TextView
            android:id="@+id/txt_lista_allergeni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lista allergeni"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_descrizione"
            app:layout_constraintEnd_toStartOf="@+id/lista_allergeni_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_categoria" />

        <EditText
            android:id="@+id/lista_allergeni_text"
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_weight="1"
            android:background="@drawable/et_custom"
            android:ems="10"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toTopOf="@+id/descrizione_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_lista_allergeni"
            app:layout_constraintTop_toBottomOf="@id/categoria_text" />

        <TextView
            android:id="@+id/txt_descrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="descrizione"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/descrizione_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_lista_allergeni" />

        <EditText
            android:id="@+id/descrizione_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/et_custom"
            android:ems="10"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/txt_descrizione"
            app:layout_constraintTop_toBottomOf="@id/lista_allergeni_text" />

        <Button
            android:id="@+id/btn_aggiungi"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> aggiungiPortataViewModel.aggiungiPortata(nomeText.getText().toString(), costoText.getText().toString(), categoriaText.getText().toString(), descrizioneText.getText().toString())}"
            android:text="aggiungi" />

        <Button
            android:id="@+id/btn_annulla"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:onClick="@{() -> aggiungiPortataViewModel.setTornaIndietro()}"
            android:text="annulla" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="btn_aggiungi,btn_annulla"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="50dp"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_txt"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:constraint_referenced_ids="txt_nome,txt_costo,txt_categoria,txt_lista_allergeni,txt_descrizione"
            app:layout_constraintBottom_toTopOf="@+id/flow_button"
            app:layout_constraintEnd_toStartOf="@id/flow_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_et"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:constraint_referenced_ids="nome_text,costo_text,categoria_text,lista_allergeni_text,descrizione_text"
            app:layout_constraintBottom_toTopOf="@+id/flow_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flow_txt"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>